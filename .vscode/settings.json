{
  "eslint.run": "onType",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "volar.tsPlugin": true,
  "cSpell.words": [
    "composables",
    "focusring",
    "vite",
    "vitejs"
  ],
  "cSpell.ignorePaths": [
    ".git",
    ".vscode",
    "node_modules",
    "package.json",
    "package-lock.json",
    ".prettierrc",
    ".eslintrc.js"
  ],
  "[typescript]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
